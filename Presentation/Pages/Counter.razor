@page "/counter"

<MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Start" Wrap="Wrap.Wrap">
    <MatrixInput @bind-Matrix="@MatrixA" Character="@('A')" />
    <MatrixInput @bind-Matrix="@MatrixB" Character="@('B')" />
</MudStack>

<MudButton OnClick="Action">Click Me</MudButton>
<MudTextField @bind-Value="A" AutoGrow/>
<br/>
<MudTextField @bind-Value="B" AutoGrow />
@code {
    public List<List<string>> MatrixA { get; set; } = new();
    public List<List<string>> MatrixB { get; set; } = new();

    public string A { get; set; } = string.Empty;
    public string B { get; set; } = string.Empty;
    public void Action()
    {
        Fraction[][] matrixa = new Fraction[MatrixA.Count][];
        for (int i = 0; i < MatrixA.Count; i++)
        {
            matrixa[i] = new Fraction[MatrixA[i].Count];
            for (int j = 0; j < MatrixA[i].Count; j++)
            {
                matrixa[i][j] = MatrixA[i][j];
            }
        }

        Fraction[][] matrixb = new Fraction[MatrixB.Count][];
        for (int i = 0; i < MatrixB.Count; i++)
        {
            matrixb[i] = new Fraction[MatrixB[i].Count];
            for (int j = 0; j < MatrixB[i].Count; j++)
            {
                matrixb[i][j] = MatrixB[i][j];
            }
        }

        A = matrixa.GetMatrix();
        B = matrixb.GetMatrix();
    }
}
<MathJaxComponent>
    @if(Coefficient is null)
    {
        @Matrix.ConvertToMathJax(Display)
    }
    else
    {
        @Matrix.ConvertToMathJax(Coefficient, Display)
    }
</MathJaxComponent>

@code {
    [Parameter] 
    public Fraction[][] Matrix { get; set; }

    [Parameter]
    public Fraction[]? Coefficient { get; set; } = null;

    [Parameter]
    public Display Display { get; set; } = Display.Block;
}
